<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FCE4EC</item>
    </style>
    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextView1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">Nutrition Quiz</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">36sp</item> />
    </style>

    <style name="ImageView">
        <item name="android:layout_height">210dp</item>
        <item name="android:layout_width">330dp</item>
    </style>

    <style name="TextView2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">#BBDEFB</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
